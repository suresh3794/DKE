<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %><%= settings.siteName %></title>
    <link rel="stylesheet" href="/css/style.css">
    <% if (typeof page !== 'undefined' && page === 'gallery') { %>
        <link rel="stylesheet" href="/css/gallery.css">
    <% } %>
    <% if (typeof page !== 'undefined' && page === 'products') { %>
        <link rel="stylesheet" href="/css/products.css">
    <% } %>
    <% if (typeof page !== 'undefined' && page === 'about') { %>
        <link rel="stylesheet" href="/css/about.css">
    <% } %>
    <% if (typeof page !== 'undefined' && page === 'contact') { %>
        <link rel="stylesheet" href="/css/contact.css">
    <% } %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="/js/mobile-menu.js"></script>
    <script>
        // Ensure mobile menu is properly initialized
        document.addEventListener('DOMContentLoaded', function() {
            // Force recalculation of menu styles
            const menu = document.querySelector('.menu');
            if (menu) {
                // Force a reflow
                void menu.offsetWidth;
            }
        });
    </script>
</head>
<body>
    <header>
        <% if (typeof hideTopBar === 'undefined' || !hideTopBar) { %>
        <div class="top-bar">
            <div class="contact-info">
                <span><i class="fas fa-phone"></i> <%= settings.contactPhone %></span>
                <span><i class="fas fa-envelope"></i> <%= settings.contactEmail %></span>
            </div>
            <div class="social-icons">
                <a href="<%= settings.socialFacebook %>" target="_blank"><i class="fab fa-facebook"></i></a>
                <a href="<%= settings.socialInstagram %>" target="_blank"><i class="fab fa-instagram"></i></a>
                <a href="<%= settings.socialTwitter %>" target="_blank"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
        <% } %>
        <nav>
            <div class="logo">
                <img src="/images/logo.png" alt="<%= settings.siteName %> Logo">
                <div class="logo-text">
                    <h1><%= settings.siteName %></h1>
                    <p><%= settings.siteTagline %></p>
                </div>
            </div>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About Us</a></li>
                <li><a href="/products">Products</a></li>
                <li><a href="/gallery">Gallery</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
            <div class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>
