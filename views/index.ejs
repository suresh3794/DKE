<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= settings.siteName %></title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('partials/header', { page: 'home' }) %>

    <section class="hero">
        <div class="hero-slider">
            <!-- Slides -->
            <% for(let i = 0; i < 6; i++) { %>
                <div class="slide <%= i === 0 ? 'active' : '' %>">
                    <img src="<%= settings.heroSlides && settings.heroSlides[i] ? settings.heroSlides[i] : `/images/hero/slide${i+1}.jpg` %>" 
                         alt="Kitchen Equipment Slide <%= i+1 %>">
                    <div class="slide-overlay"></div>
                </div>
            <% } %>
            
            <!-- Slide indicators -->
            <div class="slide-indicators">
                <% for(let i = 0; i < 6; i++) { %>
                    <span class="indicator <%= i === 0 ? 'active' : '' %>" data-slide="<%= i %>"></span>
                <% } %>
            </div>
        </div>
        
        <div class="hero-content">
            <h1><%= settings.siteName %></h1>
            <p><%= settings.siteTagline %></p>
            <a href="/products" class="btn">View Products</a>
        </div>
    </section>

    <section class="featured-products">
        <div class="container">
            <h2 class="section-title">Featured Products</h2>
            <div class="product-grid">
                <% if (featuredProducts && featuredProducts.length > 0) { %>
                    <% featuredProducts.forEach(product => { %>
                        <div class="product-card">
                            <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
                            <h3><%= product.name %></h3>
                            <p><%= product.description.substring(0, 100) %><%= product.description.length > 100 ? '...' : '' %></p>
                            <a href="/products#<%= product.category %>" class="btn-small">View Details</a>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="product-card">
                        <img src="/images/products/product1.jpg" alt="Commercial Oven">
                        <h3>Commercial Oven</h3>
                        <p>High-capacity commercial oven for restaurants</p>
                        <a href="/products#cooking" class="btn-small">View Details</a>
                    </div>
                    <div class="product-card">
                        <img src="/images/products/product2.jpg" alt="Refrigeration Unit">
                        <h3>Refrigeration Unit</h3>
                        <p>Energy-efficient commercial refrigeration</p>
                        <a href="/products#refrigeration" class="btn-small">View Details</a>
                    </div>
                    <div class="product-card">
                        <img src="/images/products/product3.jpg" alt="Food Processor">
                        <h3>Food Processor</h3>
                        <p>Industrial food processor for high-volume kitchens</p>
                        <a href="/products#processors" class="btn-small">View Details</a>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <section class="testimonials">
        <div class="container">
            <h2 class="section-title">What Our Clients Say</h2>
            <div class="testimonial-slider">
                <% if (featuredTestimonials && featuredTestimonials.length > 0) { %>
                    <% featuredTestimonials.forEach(testimonial => { %>
                        <div class="testimonial">
                            <div class="testimonial-content">
                                <p>"<%= testimonial.content %>"</p>
                                <div class="rating">
                                    <% for (let i = 0; i < 5; i++) { %>
                                        <% if (i < testimonial.rating) { %>
                                            <i class="fas fa-star"></i>
                                        <% } else { %>
                                            <i class="far fa-star"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                            <div class="client">
                                <% if (testimonial.imageUrl) { %>
                                    <img src="<%= testimonial.imageUrl %>" alt="<%= testimonial.name %>">
                                <% } else { %>
                                    <img src="/images/default-avatar.png" alt="<%= testimonial.name %>">
                                <% } %>
                                <div>
                                    <h4><%= testimonial.name %></h4>
                                    <p><%= testimonial.position %><% if (testimonial.company) { %>, <%= testimonial.company %><% } %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="testimonial">
                        <p>"Dignity Kitchen Equipments provided us with top-quality appliances that have significantly improved our kitchen efficiency."</p>
                        <div class="client">
                            <img src="/images/clients/client1.jpg" alt="Client">
                            <div>
                                <h4>John Smith</h4>
                                <p>Executive Chef, Grand Hotel</p>
                            </div>
                        </div>
                    </div>
                    <!-- More testimonials would go here -->
                <% } %>
            </div>
        </div>
    </section>

    <section class="cta">
        <div class="container">
            <h2>Ready to Upgrade Your Kitchen?</h2>
            <p>Contact us today for a free consultation and quote</p>
            <a href="/contact" class="btn">Get in Touch</a>
        </div>
    </section>
    
    <%- include('partials/footer') %>

    <script src="/js/main.js"></script>
</body>
</html>
