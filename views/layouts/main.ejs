<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %><%= settings.siteName %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <div class="top-bar">
            <div class="contact-info">
                <span><i class="fas fa-phone"></i> <%= settings.contactPhone %></span>
                <span><i class="fas fa-envelope"></i> <%= settings.contactEmail %></span>
            </div>
            <div class="social-icons">
                <a href="<%= settings.socialFacebook %>" target="_blank"><i class="fab fa-facebook"></i></a>
                <a href="<%= settings.socialInstagram %>" target="_blank"><i class="fab fa-instagram"></i></a>
                <a href="<%= settings.socialTwitter %>" target="_blank"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
        <nav>
            <div class="logo">
                <img src="/images/logo.png" alt="<%= settings.siteName %> Logo">
                <div class="logo-text">
                    <h1><%= settings.siteName %></h1>
                    <p><%= settings.siteTagline %></p>
                </div>
            </div>
            <ul class="menu">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/products">Products</a></li>
                <li><a href="/gallery">Gallery</a></li>
                <li><a href="/testimonials">Testimonials</a></li>
                <li><a href="/contact">Contact</a></li>
            </ul>
            <div class="mobile-menu-btn">
                <i class="fas fa-bars"></i>
            </div>
        </nav>
    </header>
    
    <!-- Main content -->
    <%- body %>
    
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-logo">
                    <img src="/images/logo.png" alt="<%= settings.siteName %> Logo">
                    <p><%= settings.siteTagline %></p>
                </div>
                <div class="footer-links">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/products">Products</a></li>
                        <li><a href="/gallery">Gallery</a></li>
                        <li><a href="/contact">Contact</a></li>
                    </ul>
                </div>
                <div class="footer-contact">
                    <h3>Contact Us</h3>
                    <p><i class="fas fa-map-marker-alt"></i> <%= settings.contactAddress %></p>
                    <p><i class="fas fa-phone"></i> <%= settings.contactPhone %></p>
                    <p><i class="fas fa-envelope"></i> <%= settings.contactEmail %></p>
                </div>
            </div>
            <div class="footer-bottom">
                <p><%= settings.footerText %></p>
                <div class="social-icons">
                    <a href="<%= settings.socialFacebook %>" target="_blank"><i class="fab fa-facebook"></i></a>
                    <a href="<%= settings.socialInstagram %>" target="_blank"><i class="fab fa-instagram"></i></a>
                    <a href="<%= settings.socialTwitter %>" target="_blank"><i class="fab fa-twitter"></i></a>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="/js/main.js"></script>
</body>
</html>
