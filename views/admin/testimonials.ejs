<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Testimonials Management - Dignity Kitchen</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .testimonial-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .testimonial-card {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            position: relative;
            padding: 20px;
        }
        
        .testimonial-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .testimonial-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .client-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 15px;
            flex-shrink: 0;
        }
        
        .client-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .client-info h3 {
            margin: 0;
            font-size: 18px;
            color: var(--dark-color);
        }
        
        .client-info p {
            margin: 5px 0 0;
            font-size: 14px;
            color: var(--text-color);
        }
        
        .testimonial-content {
            font-size: 15px;
            line-height: 1.6;
            color: var(--text-color);
            margin-bottom: 15px;
            position: relative;
            padding-left: 25px;  /* Add padding to make room for the quote mark */
        }
        
        .testimonial-content::before {
            content: '"';
            font-size: 50px;
            color: var(--primary-color-light);
            position: absolute;
            top: -15px;
            left: 0;
            opacity: 0.2;
            font-family: serif;
            z-index: 0;  /* Ensure the quote is behind the text */
        }
        
        .testimonial-content p {
            position: relative;
            z-index: 1;  /* Ensure text is above the quote mark */
        }
        
        .rating {
            color: #FFD700;
            margin-bottom: 15px;
        }
        
        .testimonial-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            color: var(--text-muted);
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #f0f0f0;
        }
        
        .featured-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: var(--primary-color);
            color: white;
            font-size: 12px;
            padding: 3px 8px;
            border-radius: 20px;
        }
        
        .testimonial-actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }
        
        .action-btn {
            padding: 8px 12px;
            border-radius: 5px;
            font-size: 13px;
            font-weight: 500;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: var(--transition);
            cursor: pointer;
            border: none;
        }
        
        .edit-btn {
            background-color: var(--secondary-color-light);
            color: var(--secondary-color-dark);
        }
        
        .edit-btn:hover {
            background-color: var(--secondary-color);
            color: white;
        }
        
        .delete-btn {
            background-color: #ffebee;
            color: #d32f2f;
        }
        
        .delete-btn:hover {
            background-color: #d32f2f;
            color: white;
        }
        
        .filters {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .filter-group {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .filter-group label {
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .filter-group select {
            padding: 8px 12px;
            border-radius: 5px;
            border: 1px solid #e1e5eb;
            background-color: white;
            font-size: 14px;
            color: var(--text-color);
        }
        
        .empty-state {
            text-align: center;
            padding: 50px 20px;
            background: white;
            border-radius: 10px;
            box-shadow: var(--shadow);
        }
        
        .empty-state i {
            font-size: 50px;
            color: var(--primary-color-light);
            margin-bottom: 20px;
        }
        
        .empty-state h3 {
            font-size: 20px;
            margin-bottom: 10px;
            color: var(--dark-color);
        }
        
        .empty-state p {
            color: var(--text-muted);
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            <div class="logo">
                <img src="/images/logo.png" alt="Dignity Kitchen Logo">
                <h2>Admin Panel</h2>
            </div>
            <nav class="admin-nav">
                <ul>
                    <li><a href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li><a href="/admin/gallery"><i class="fas fa-images"></i> Gallery</a></li>
                    <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
                    <li class="active"><a href="/admin/testimonials"><i class="fas fa-quote-right"></i> Testimonials</a></li>
                    <li><a href="/admin/contacts"><i class="fas fa-envelope"></i> Contact Messages</a></li>
                    <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
                    <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </nav>
        </aside>
        
        <main class="content">
            <header class="admin-header">
                <h1>Testimonials Management</h1>
                <div class="user-info">
                    <span>Welcome, Admin</span>
                </div>
            </header>
            
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="message success-message">
                    <i class="fas fa-check-circle"></i>
                    <%= message %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="message error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= error %>
                </div>
            <% } %>
            
            <div class="add-new">
                <h2>Testimonials</h2>
                <a href="/admin/testimonials/add" class="add-btn">
                    <i class="fas fa-plus-circle"></i> Add New Testimonial
                </a>
            </div>

            <style>
                .add-btn {
                    background: var(--secondary-color);
                    color: white;
                    padding: 10px 20px;
                    border-radius: 8px;
                    font-weight: 500;
                    text-decoration: none;
                    display: inline-flex;
                    align-items: center;
                    gap: 8px;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                }
                
                .add-btn:hover {
                    background: var(--primary-color);
                    transform: translateY(-2px);
                    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
                }
                
                .add-btn i {
                    font-size: 16px;
                }
                
                .add-new {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    margin-bottom: 25px;
                    padding-bottom: 15px;
                    border-bottom: 1px solid #f0f0f0;
                }
            </style>
            
            <div class="filters">
                <div class="filter-group">
                    <label for="featured-filter">Show:</label>
                    <select id="featured-filter">
                        <option value="all">All Testimonials</option>
                        <option value="featured">Featured Only</option>
                        <option value="not-featured">Not Featured</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label for="sort-filter">Sort By:</label>
                    <select id="sort-filter">
                        <option value="newest">Newest First</option>
                        <option value="oldest">Oldest First</option>
                        <option value="rating-high">Highest Rating</option>
                        <option value="rating-low">Lowest Rating</option>
                    </select>
                </div>
            </div>
            
            <% if (testimonials && testimonials.length > 0) { %>
                <div class="testimonial-grid">
                    <% testimonials.forEach(testimonial => { %>
                        <div class="testimonial-card" data-featured="<%= testimonial.featured ? 'yes' : 'no' %>" data-rating="<%= testimonial.rating %>">
                            <% if (testimonial.featured) { %>
                                <span class="featured-badge">Featured</span>
                            <% } %>
                            
                            <div class="testimonial-header">
                                <div class="client-image">
                                    <% if (testimonial.imageUrl) { %>
                                        <img src="<%= testimonial.imageUrl %>" alt="<%= testimonial.name %>">
                                    <% } else { %>
                                        <img src="/images/default-avatar.png" alt="<%= testimonial.name %>">
                                    <% } %>
                                </div>
                                <div class="client-info">
                                    <h3><%= testimonial.name %></h3>
                                    <p><%= testimonial.position %><% if (testimonial.company) { %>, <%= testimonial.company %><% } %></p>
                                </div>
                            </div>
                            
                            <div class="testimonial-content">
                                <p><%= testimonial.content %></p>
                            </div>
                            
                            <div class="rating">
                                <% for (let i = 0; i < 5; i++) { %>
                                    <% if (i < testimonial.rating) { %>
                                        <i class="fas fa-star"></i>
                                    <% } else { %>
                                        <i class="far fa-star"></i>
                                    <% } %>
                                <% } %>
                            </div>
                            
                            <div class="testimonial-meta">
                                <span>Added: <%= testimonial.createdAt.toLocaleDateString() %></span>
                            </div>
                            
                            <div class="testimonial-actions">
                                <a href="/admin/testimonials/edit/<%= testimonial._id %>" class="action-btn edit-btn">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form action="/admin/testimonials/delete/<%= testimonial._id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this testimonial?');">
                                    <button type="submit" class="action-btn delete-btn">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-quote-right"></i>
                    <h3>No Testimonials Yet</h3>
                    <p>Start by adding your first client testimonial</p>
                    <a href="/admin/testimonials/add" class="add-btn">
                        <i class="fas fa-plus"></i> Add New Testimonial
                    </a>
                </div>
            <% } %>
        </main>
    </div>

    <script src="/js/admin.js"></script>
    <script>
        // Featured filtering
        document.getElementById('featured-filter').addEventListener('change', function() {
            filterTestimonials();
        });
        
        // Sort filtering
        document.getElementById('sort-filter').addEventListener('change', function() {
            sortTestimonials();
        });
        
        function filterTestimonials() {
            const featured = document.getElementById('featured-filter').value;
            const items = document.querySelectorAll('.testimonial-card');
            
            items.forEach(item => {
                if (featured === 'all' || 
                    (featured === 'featured' && item.getAttribute('data-featured') === 'yes') ||
                    (featured === 'not-featured' && item.getAttribute('data-featured') === 'no')) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
        
        function sortTestimonials() {
            const sortOrder = document.getElementById('sort-filter').value;
            const grid = document.querySelector('.testimonial-grid');
            const items = Array.from(grid.querySelectorAll('.testimonial-card'));
            
            items.sort((a, b) => {
                if (sortOrder === 'newest' || sortOrder === 'oldest') {
                    const dateA = new Date(a.querySelector('.testimonial-meta span').textContent.replace('Added: ', ''));
                    const dateB = new Date(b.querySelector('.testimonial-meta span').textContent.replace('Added: ', ''));
                    
                    return sortOrder === 'newest' ? dateB - dateA : dateA - dateB;
                } else if (sortOrder === 'rating-high' || sortOrder === 'rating-low') {
                    const ratingA = parseInt(a.getAttribute('data-rating'));
                    const ratingB = parseInt(b.getAttribute('data-rating'));
                    
                    return sortOrder === 'rating-high' ? ratingB - ratingA : ratingA - ratingB;
                }
                
                return 0;
            });
            
            // Remove all items
            items.forEach(item => grid.removeChild(item));
            
            // Add sorted items
            items.forEach(item => grid.appendChild(item));
        }
    </script>
</body>
</html>
