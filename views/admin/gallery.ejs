<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery Management - Dignity Kitchen</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .gallery-item {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
        }
        
        .gallery-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        
        .gallery-image {
            height: 200px;
            overflow: hidden;
        }
        
        .gallery-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: var(--transition);
        }
        
        .gallery-item:hover .gallery-image img {
            transform: scale(1.05);
        }
        
        .gallery-details {
            padding: 15px;
        }
        
        .gallery-details h3 {
            margin-bottom: 5px;
            color: var(--dark-color);
        }
        
        .gallery-details p {
            color: #777;
            font-size: 14px;
            margin-bottom: 10px;
        }
        
        .gallery-category {
            display: inline-block;
            padding: 3px 10px;
            background: #f0f7ff;
            color: var(--secondary-color);
            border-radius: 20px;
            font-size: 12px;
            margin-bottom: 10px;
        }
        
        .gallery-subcategory {
            display: inline-block;
            padding: 3px 10px;
            background: #fff0e6;
            color: #ff8c42;
            border-radius: 20px;
            font-size: 12px;
            margin-left: 5px;
            margin-bottom: 10px;
        }
        
        .gallery-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 10px;
        }
        
        .action-btn {
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: var(--transition);
            border: none;
        }
        
        .edit-btn {
            background: #f0f7ff;
            color: var(--secondary-color);
        }
        
        .delete-btn {
            background: #fff5f5;
            color: var(--accent-color);
        }
        
        .action-btn:hover {
            opacity: 0.8;
        }
        
        .add-new {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .add-btn {
            background: var(--secondary-color);
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: var(--transition);
        }
        
        .add-btn:hover {
            background: var(--primary-color);
            transform: translateY(-2px);
        }
        
        .filter-options {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .filter-select {
            padding: 8px 15px;
            border-radius: 8px;
            border: 1px solid #e1e5eb;
            background-color: white;
            min-width: 150px;
        }
        
        .message {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .success-message {
            background-color: #eefbf5;
            color: var(--success-color);
            border-left: 4px solid var(--success-color);
        }
        
        .error-message {
            background-color: #fff5f5;
            color: var(--accent-color);
            border-left: 4px solid var(--accent-color);
        }
        
        .empty-state {
            text-align: center;
            padding: 50px 20px;
            background-color: white;
            border-radius: 10px;
            box-shadow: var(--shadow);
        }
        
        .empty-state i {
            font-size: 3rem;
            color: #ccc;
            margin-bottom: 20px;
        }
        
        .empty-state h3 {
            margin-bottom: 10px;
            color: var(--dark-color);
        }
        
        .empty-state p {
            color: #777;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            <div class="logo">
                <img src="/images/logo.png" alt="Dignity Kitchen Logo">
                <h2>Admin Panel</h2>
            </div>
            <nav class="admin-nav">
                <ul>
                    <li><a href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li class="active"><a href="/admin/gallery"><i class="fas fa-images"></i> Gallery</a></li>
                    <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
                    <li><a href="/admin/testimonials"><i class="fas fa-quote-right"></i> Testimonials</a></li>
                    <li><a href="/admin/contacts"><i class="fas fa-envelope"></i> Contact Messages</a></li>
                    <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
                    <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </nav>
        </aside>
        
        <main class="content">
            <header class="admin-header">
                <h1>Gallery Management</h1>
                <div class="user-info">
                    <span>Welcome, Admin</span>
                </div>
            </header>
            
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="message success-message">
                    <i class="fas fa-check-circle"></i>
                    <%= message %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="message error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= error %>
                </div>
            <% } %>
            
            <div class="add-new">
                <h2>Gallery Items</h2>
                <a href="/admin/gallery/add" class="add-btn"><i class="fas fa-plus"></i> Add New Item</a>
            </div>
            
            <div class="filter-options">
                <select class="filter-select" id="category-filter">
                    <option value="all">All Categories</option>
                    <option value="installations">Installations</option>
                    <option value="products">Products</option>
                    <option value="events">Events</option>
                </select>
                
                <select class="filter-select" id="sort-filter">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                </select>
            </div>
            
            <% if (galleryItems && galleryItems.length > 0) { %>
                <div class="gallery-grid">
                    <% galleryItems.forEach(item => { %>
                        <div class="gallery-item" data-category="<%= item.category %>">
                            <div class="gallery-image">
                                <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                            </div>
                            <div class="gallery-details">
                                <span class="gallery-category"><%= item.category %></span>
                                <% if (item.category === 'products' && item.productCategory) { %>
                                    <span class="gallery-subcategory"><%= item.productCategory %></span>
                                <% } %>
                                <h3><%= item.title %></h3>
                                <p><%= item.description %></p>
                                <small>Added: <%= item.createdAt.toLocaleDateString() %></small>
                                <div class="gallery-actions">
                                    <a href="/admin/gallery/edit/<%= item._id %>" class="action-btn edit-btn">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form action="/admin/gallery/delete/<%= item._id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <button type="submit" class="action-btn delete-btn">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-images"></i>
                    <h3>No Gallery Items Yet</h3>
                    <p>Start by adding your first gallery item</p>
                    <a href="/admin/gallery/add" class="add-btn">
                        <i class="fas fa-plus"></i> Add New Item
                    </a>
                </div>
            <% } %>
        </main>
    </div>

    <script src="/js/admin.js"></script>
    <script src="/js/gallery.js"></script>
    <script>
        // Category filtering
        document.getElementById('category-filter').addEventListener('change', function() {
            filterGallery();
        });
        
        // Sort filtering
        document.getElementById('sort-filter').addEventListener('change', function() {
            sortGallery();
        });
        
        function filterGallery() {
            const category = document.getElementById('category-filter').value;
            const items = document.querySelectorAll('.gallery-item');
            
            items.forEach(item => {
                if (category === 'all' || item.getAttribute('data-category') === category) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
        
        function sortGallery() {
            const sortOrder = document.getElementById('sort-filter').value;
            const grid = document.querySelector('.gallery-grid');
            const items = Array.from(grid.querySelectorAll('.gallery-item'));
            
            items.sort((a, b) => {
                const dateA = new Date(a.querySelector('small').textContent.replace('Added: ', ''));
                const dateB = new Date(b.querySelector('small').textContent.replace('Added: ', ''));
                
                return sortOrder === 'newest' ? dateB - dateA : dateA - dateB;
            });
            
            // Remove all items
            items.forEach(item => grid.removeChild(item));
            
            // Add sorted items
            items.forEach(item => grid.appendChild(item));
        }
    </script>
</body>
</html>
