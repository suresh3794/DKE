<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Slide <%= slideIndex + 1 %> - Dignity Kitchen</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .form-container {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: var(--shadow);
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        
        .image-preview {
            margin-top: 15px;
            max-width: 100%;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .image-preview img {
            width: 100%;
            height: auto;
            display: block;
        }
        
        .btn-container {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 20px;
        }
        
        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }
        
        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            <div class="logo">
                <img src="/images/logo.png" alt="Dignity Kitchen Logo">
                <h2>Admin Panel</h2>
            </div>
            <nav class="admin-nav">
                <ul>
                    <li><a href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li><a href="/admin/gallery"><i class="fas fa-images"></i> Gallery</a></li>
                    <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
                    <li><a href="/admin/testimonials"><i class="fas fa-quote-right"></i> Testimonials</a></li>
                    <li><a href="/admin/contacts"><i class="fas fa-envelope"></i> Contact Messages</a></li>
                    <li class="active"><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
                    <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </nav>
        </aside>
        
        <main class="content">
            <header class="admin-header">
                <h1>Edit Hero Slide <%= slideIndex + 1 %></h1>
                <div class="user-info">
                    <span>Welcome, Admin</span>
                </div>
            </header>
            
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="message success-message">
                    <i class="fas fa-check-circle"></i>
                    <%= message %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="message error-message">
                    <i class="fas fa-exclamation-circle"></i>
                    <%= error %>
                </div>
            <% } %>
            
            <div class="form-container">
                <form action="/admin/settings/slide/<%= slideIndex %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="image">Slide Image</label>
                        <input type="file" id="image" name="image" class="form-control" required accept="image/*">
                        <small class="form-text">Recommended size: 1920x800 pixels. Landscape orientation works best.</small>
                        
                        <% if (currentImage) { %>
                            <div class="image-preview">
                                <img src="<%= currentImage %>" alt="Current slide image">
                                <small class="form-text">Current image. Upload a new one to replace it.</small>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="btn-container">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Slide
                        </button>
                        <a href="/admin/settings" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <script src="/js/admin.js"></script>
    <script>
        // Preview image before upload
        document.getElementById('image').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    let preview = document.querySelector('.image-preview');
                    if (!preview) {
                        preview = document.createElement('div');
                        preview.className = 'image-preview';
                        const img = document.createElement('img');
                        preview.appendChild(img);
                        const small = document.createElement('small');
                        small.className = 'form-text';
                        small.textContent = 'Image preview';
                        preview.appendChild(small);
                        e.target.parentNode.appendChild(preview);
                    }
                    preview.querySelector('img').src = event.target.result;
                    if (preview.querySelector('small')) {
                        preview.querySelector('small').textContent = 'Image preview';
                    }
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>