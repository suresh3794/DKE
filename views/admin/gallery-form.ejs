<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= item._id ? 'Edit' : 'Add' %> Gallery Item - Dignity Kitchen</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .form-container {
            background: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: var(--shadow);
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: var(--dark-color);
        }
        
        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #e1e5eb;
            border-radius: 8px;
            font-size: 16px;
            transition: var(--transition);
        }
        
        .form-control:focus {
            outline: none;
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }
        
        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }
        
        .image-preview {
            margin-top: 15px;
            max-width: 300px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .image-preview img {
            width: 100%;
            height: auto;
            display: block;
        }
        
        .btn-container {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }
        
        .btn {
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            font-size: 16px;
        }
        
        .btn-primary {
            background: var(--secondary-color);
            color: white;
        }
        
        .btn-primary:hover {
            background: var(--primary-color);
            transform: translateY(-2px);
        }
        
        .btn-secondary {
            background: #f5f5f5;
            color: #555;
        }
        
        .btn-secondary:hover {
            background: #e5e5e5;
        }
        
        .error-message {
            background-color: #fff5f5;
            color: var(--accent-color);
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 25px;
            border-left: 4px solid var(--accent-color);
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            <div class="logo">
                <img src="/images/logo.png" alt="Dignity Kitchen Logo">
                <h2>Admin Panel</h2>
            </div>
            <nav class="admin-nav">
                <ul>
                    <li><a href="/admin"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                    <li class="active"><a href="/admin/gallery"><i class="fas fa-images"></i> Gallery</a></li>
                    <li><a href="/admin/products"><i class="fas fa-box"></i> Products</a></li>
                    <li><a href="/admin/testimonials"><i class="fas fa-quote-right"></i> Testimonials</a></li>
                    <li><a href="/admin/contacts"><i class="fas fa-envelope"></i> Contact Messages</a></li>
                    <li><a href="/admin/settings"><i class="fas fa-cog"></i> Settings</a></li>
                    <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </nav>
        </aside>
        
        <main class="content">
            <header class="admin-header">
                <h1><%= item._id ? 'Edit' : 'Add New' %> Gallery Item</h1>
                <div class="user-info">
                    <span>Welcome, Admin</span>
                </div>
            </header>
            
            <div class="form-container">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="error-message">
                        <%= error %>
                    </div>
                <% } %>
                
                <form action="<%= formAction %>" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" class="form-control" value="<%= item.title || '' %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" class="form-control" required><%= item.description || '' %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select id="category" name="category" class="form-control" required>
                            <option value="">Select a category</option>
                            <option value="installations" <%= item.category === 'installations' ? 'selected' : '' %>>Installations</option>
                            <option value="products" <%= item.category === 'products' ? 'selected' : '' %>>Products</option>
                            <option value="events" <%= item.category === 'events' ? 'selected' : '' %>>Events</option>
                        </select>
                    </div>

                    <div class="form-group" id="productCategoryGroup" style="<%= item.category === 'products' ? '' : 'display: none;' %>">
                        <label for="productCategory">Product Category</label>
                        <select id="productCategory" name="productCategory" class="form-control" <%= item.category === 'products' ? 'required' : '' %>>
                            <option value="">Select a product category</option>
                            <option value="cooking" <%= item.productCategory === 'cooking' ? 'selected' : '' %>>Cooking Equipment</option>
                            <option value="refrigeration" <%= item.productCategory === 'refrigeration' ? 'selected' : '' %>>Refrigeration</option>
                            <option value="preparation" <%= item.productCategory === 'preparation' ? 'selected' : '' %>>Food Preparation</option>
                            <option value="storage" <%= item.productCategory === 'storage' ? 'selected' : '' %>>Storage Solutions</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="image">
                            <%= item._id ? 'Image (leave empty to keep current image)' : 'Image' %>
                        </label>
                        <input type="file" id="image" name="image" class="form-control" <%= item._id ? '' : 'required' %> accept="image/*">
                        
                        <% if (item.imageUrl) { %>
                            <div class="image-preview">
                                <img src="<%= item.imageUrl %>" alt="<%= item.title %>">
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="btn-container">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> <%= item._id ? 'Update' : 'Save' %> Item
                        </button>
                        <a href="/admin/gallery" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <script src="/js/admin.js"></script>
    <script>
        // Preview image before upload
        document.getElementById('image').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    let preview = document.querySelector('.image-preview');
                    if (!preview) {
                        preview = document.createElement('div');
                        preview.className = 'image-preview';
                        const img = document.createElement('img');
                        preview.appendChild(img);
                        e.target.parentNode.appendChild(preview);
                    }
                    preview.querySelector('img').src = event.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
        
        // Show/hide product category based on main category selection
        document.getElementById('category').addEventListener('change', function() {
            const productCategoryGroup = document.getElementById('productCategoryGroup');
            const productCategorySelect = document.getElementById('productCategory');
            
            if (this.value === 'products') {
                productCategoryGroup.style.display = 'block';
                productCategorySelect.setAttribute('required', 'required');
            } else {
                productCategoryGroup.style.display = 'none';
                productCategorySelect.removeAttribute('required');
                productCategorySelect.value = '';
            }
        });
    </script>
</body>
</html>
